<UserControl x:Class="GU_Exchange.Controls.OrderDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GU_Exchange.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="330" d:DesignWidth="220" Height="330" Width="220">
    <Grid>
        <!--#region Grid Layout. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!-- #endregion -->
        <!-- #region Card image -->
        <Image x:Name="imgCard" HorizontalAlignment="Center" Grid.Row="0"/>
        <!-- #endregion -->

        <!-- #region Card name and price info -->
        <TextBlock x:Name="tbName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,0,0,0" TextWrapping="Wrap" Text="CardName" Grid.Row="2"/>
        <TextBlock x:Name="tbPrice" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,20,0" TextWrapping="Wrap" Text="--.-- ???" Grid.Row="2"/>
        <!-- #endregion-->

        <StackPanel x:Name="spLoading" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.RowSpan="2" Background="#BF000000" Orientation="Horizontal" >
            <fa:ImageAwesome x:Name="spinner" Icon="CircleOutlineNotch" Spin="True" SpinDuration="4" Width="25" Height="25" Visibility="Visible" Margin="5,5,5,5" Foreground="White" />
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15,15,15,15" TextWrapping="Wrap" Text="Loading..." Grid.Row="2" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
