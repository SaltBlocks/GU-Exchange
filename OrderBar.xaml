<UserControl x:Class="GU_Exchange.OrderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GU_Exchange"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="450" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseUp="UserControl_MouseUp" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <!-- #region Highlight. -->
        <Rectangle x:Name="rectHighlight" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Stroke="#00000000" Fill="#00A5A4A4" Width="450"/>
        <!-- #endregion -->
        <!-- #region Text. -->
        <TextBlock x:Name="txtPrice" HorizontalAlignment="Left" TextWrapping="Wrap" Text="999.9999999999 USD" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <TextBlock x:Name="txtDollarPrice" HorizontalAlignment="Left" TextWrapping="Wrap" Text="($200.00)" VerticalAlignment="Center" Margin="123,0,0,0"/>
        <TextBlock x:Name="txtSeller" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Listed by 0x1234....1234" VerticalAlignment="Center" Margin="0,0,0,0" Width="128"/>
        <!-- #endregion -->
    </Grid>
</UserControl>
